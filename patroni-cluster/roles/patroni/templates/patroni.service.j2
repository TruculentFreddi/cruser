[Unit]
Description=Runners to orchestrate a high-availability PostgreSQL
After=syslog.target network.target
[Service]
Type=simple
User={{ patroni_user }}
Group={{ patroni_group }}
ExecStart=/usr/bin/patroni {{ patroni_config_path }}
KillMode=process
TimeoutSec=30
Restart=no
[Install]
WantedBy=multi-user.target\